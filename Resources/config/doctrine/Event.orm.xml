<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Rizza\CalendarBundle\Entity\Event">
        <field name="title" column="title" type="string" length="255" />
        <field name="category" column="category" type="string" length="255" nullable="true" />
        <field name="description" column="description" type="text" />
        <field name="allDay" column="all_day" type="boolean" />
        <field name="startDate" column="start_date" type="datetime" />
        <field name="endDate" column="end_date" type="datetime" />
        <field name="location" column="location" type="string" nullable="true" />
        <field name="url" column="url" type="string" nullable="true" />
    </mapped-superclass>

</doctrine-mapping>